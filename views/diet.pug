extends layout

block content
  .diet-card.mt-5
    h2.text-center.mb-4 Diet Tracker

    form#dietForm(class="mb-4")
      .mb-3
        label(for="foodInput") Food Name
        input#foodInput.form-control(type="text", placeholder="e.g. Banana")

      .mb-3
        label(for="caloriesInput") Calories
        input#caloriesInput.form-control(type="number")

      .mb-3
        label(for="mealType") Meal Type
        select#mealType.form-select
          option(value="Breakfast") Breakfast
          option(value="Lunch") Lunch
          option(value="Dinner") Dinner
          option(value="Snack") Snack

      button.btn.btn-success(type="submit") Add Food

    hr
    h4.mt-4 Food Log
    ul#dietList.list-group.mt-2

  script(src="/scripts/diet.js")
