extends layout

block content
  .group-card.mx-auto
    h2.text-center.mb-4 Group Management

    h4 Create Group
    form#createForm(class="mb-3")
      .mb-3
        label.form-label(for="groupName") Group Name
        input.form-control(type="text", id="groupName", placeholder="e.g. FitnessClub")
      button.btn.btn-primary(type="submit") Create

    h4.mt-4 Join Group
    form#joinForm(class="mb-3")
      .mb-3
        label.form-label(for="inviteCode") Invite Code
        input.form-control(type="text", id="inviteCode", placeholder="Enter code")
      button.btn.btn-info(type="submit") Join

    h4.mt-4 Goal Tracker
    form#goalForm(class="mb-3")
      .mb-3
        label.form-label(for="email") Email
        input.form-control(type="email", id="email", placeholder="Enter your email")
      .mb-3
        label.form-label(for="goal") Goal
        input.form-control(type="text", id="goal", placeholder="Enter your goal")
      button.btn.btn-dark.w-100(type="submit") Submit Goal

    hr
    h5.text-center.text-muted Group Members:
    ul.list-group#memberList

    hr
    h5.text-center.text-muted Submitted Goals:
    ul.list-group#goalList

  script(src="/scripts/group.js")
