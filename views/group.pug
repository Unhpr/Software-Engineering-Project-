extends layout

block content
  .container.mt-5
    h2.text-center.mb-4 Group Management

    h4.mb-3 Create Group
    form#createForm.mb-4
      .mb-3
        label.form-label(for="groupName") Group Name
        input.form-control(type="text", id="groupName", placeholder="e.g. FitnessClub")
      button.btn.btn-primary(type="submit") Create Group

    h4.mb-3 Join Group
    form#joinForm.mb-4
      .mb-3
        label.form-label(for="inviteCode") Invite Code
        input.form-control(type="text", id="inviteCode", placeholder="Enter invite code")
      button.btn.btn-success(type="submit") Join Group

    h4.mb-3 Goal Tracker
    form#goalForm.mb-4
      .mb-3
        label.form-label(for="goalType") Goal Type
        input.form-control(type="text", id="goalType", placeholder="e.g. Lose Weight")
      .mb-3
        label.form-label(for="goalTarget") Target
        input.form-control(type="text", id="goalTarget", placeholder="e.g. 65kg")
      .mb-3
        label.form-label(for="goalDeadline") Deadline
        input.form-control(type="date", id="goalDeadline")
      button.btn.btn-dark.w-100(type="submit") Submit Goal

    hr
    h5.text-muted My Groups:
    ul#myGroups.list-group

    button#leaveGroupBtn.btn.btn-warning.mt-3 Leave Group
    button#deleteGroupBtn.btn.btn-danger.mt-3 Delete Group

    hr
    h5.text-muted Group Members:
    ul#memberList.list-group

    hr
    h5.text-muted Submitted Goals:
    ul#goalList.list-group

  script(src="/scripts/group.js")
