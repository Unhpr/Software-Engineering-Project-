doctype html
html
  head
    title Health Tracker
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    link(rel="stylesheet", href="/style.css")

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand(href='/') HealthTracker

        ul.navbar-nav.flex-row.gap-3
          li.nav-item
            a.nav-link.text-white(href='/') Home
          li.nav-item
            a.nav-link.text-white(href='/login') Login
          li.nav-item
            a.nav-link.text-white(href='/exercise') Exercise
          li.nav-item
            a.nav-link.text-white(href='/diet') Diet
          li.nav-item
            a.nav-link.text-white(href='/group') Group

        ul.navbar-nav.ms-auto
          if username
            li.nav-item
              span.nav-link.text-white Hello #{username}
            li.nav-item
              a.nav-link.text-white(href='/logout') Logout
          else
            li.nav-item
              a.nav-link.text-white(href='/login') Login
            li.nav-item
               a.nav-link.text-white(href='/dashboard') Dashboard


    .page-wrapper.mt-5.pt-5
      .container
        block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="/scripts/group.js")
