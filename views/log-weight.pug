extends layout

block content
  .container
    h2 Log Your Weight

    form(action="/api/weight/add" method="POST")
      .mb-3
        label(for="email") Email
        input.form-control(type="email", name="email", placeholder="Enter your email", required)

      .mb-3
        label(for="weight") Current Weight (kg)
        input.form-control(type="number", name="weight", step="0.1", required)

      .mb-3
        label(for="date") Date
        input.form-control(type="date", name="date")

      button.btn.btn-primary(type="submit") Submit Weight
